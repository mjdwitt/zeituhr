body
  font-family sans-serif
  font-size 16px

.hidden
  display none !important
.right
  float right
.left
  float left
.clear
  clear both

nav.pure-menu.pure-menu-open.pure-menu-fixed
  border 0
  background rgba(255,255,255,0.9)
nav.pure-menu .pure-menu-heading
  font-size 100%
nav.pure-menu.pure-menu-horizontal>.pure-menu-heading
  margin 1px
nav ul
  float right
.pure-menu li a.current-page
  color #000

header h1
  text-align center
  font-size 6em
  font-weight normal

main
  max-width 1000px
  margin 38px auto 0 auto
  padding 1em

#time
  text-align center
  margin .25em
#hours, #minutes
  font-size 10em
#seconds
  font-size 2.5em

#timer.center
  width 198px
  margin 0 auto
#timer .pure-button
  color white
  font-size 1.5em
  font-weight bold
  margin 0 auto

.running-false
  background-color green
.running-true
  background-color red

.logs
  margin-top 4em
  h2
    border-bottom 1px solid black

#debug
  border 2px solid #333
  border-radius 10px
  background #ccc
  padding 0 1em
  margin 0.5em

.pure-button
  margin 0 0.5em
