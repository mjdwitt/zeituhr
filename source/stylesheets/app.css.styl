body
  font-family sans-serif
  font-size 16px

header h1
  text-align center
  font-size 6em
  font-weight normal

main
  max-width 1000px
  margin 0 auto
  padding 1em

#time
  text-align center
  margin .25em
#hours, #minutes
  font-size 10em
#seconds
  font-size 2.5em

#timer.center
  width 198px
  margin 0 auto
#timer .pure-button
  color white
  font-size 1.5em
  font-weight bold
  margin 0 auto

.running-false
  background-color green
.running-true
  background-color red

#recent
  margin-top 4em
  h2
    border-bottom 1px solid black
