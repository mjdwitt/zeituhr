#time
  span#hours
    | {{clock.hours() | minDigits:2}}
  span#minutes
    | :{{clock.minutes() | minDigits:2}}
  span#seconds
    | :{{clock.seconds() | minDigits:2}}

#timer.center
  a.pure-button class="running-{{clock.running}}" ng-click="toggleTimer()"
    | {{buttonMessage}} Timer

#recent
  .pure-g-r
    .pure-u-1-8

    .pure-u-3-4
      h2 Recent logs

      table.pure-table.pure-table-striped
        thead
          tr
            th Date
            th Code
            th Memo
            th Time
        tbody
          tr ng-repeat="time in times"
            td
              | {{ time.date() }}
            td
              | {{ time.code() }}
            td
              | {{ time.description() }}
            td
              | {{ time.duration() }}

    .pure-u-1-8
